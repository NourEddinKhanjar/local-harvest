<%- include('../partials/header', { title: title }) %>

<div class="manage-products-container">
    <h2><%= title %></h2>
    <a href="/producer/products/add" class="btn btn-primary" style="margin-bottom: 20px;">Add New Product</a>

    <% if (products && products.length > 0) { %>
        <table class="products-table">
            <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% products.forEach(function(product) { %>
                <tr>
                    <td>
                        <% if (product.image_filename) { %>
                            <img src="/uploads/<%= product.image_filename %>" alt="<%= product.name %>" style="width: 50px; height: 50px; object-fit: cover;">
                        <% } else { %>
                            <span style="font-size: 0.8em;">No Image</span>
                        <% } %>
                    </td>
                    <td><%= product.name %></td>
                    <td><%= typeof product.price === 'number' ? product.price.toFixed(2) : product.price %></td>
                    <td><%= product.quantity_available %></td>
                    <td><%= product.category %></td>
                    <td>
                        <a href="/producer/products/edit/<%= product.id %>" class="btn btn-sm">Edit</a>
                        <form action="/producer/products/delete/<%= product.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>You have not added any products yet. <a href="/producer/products/add">Add your first product!</a></p>
    <% } %>
</div>

<%- include('../partials/footer') %>