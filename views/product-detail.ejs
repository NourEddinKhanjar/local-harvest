<%- include('partials/header', { title: title }) %>

<% if (product) { %>
    <article class="product-detail-view">
        <h2><%= product.name %></h2>

        <% if (product.image_filename) { %>
            <img src="/uploads/<%= product.image_filename %>" alt="<%= product.name %>" class="product-image-large">
        <% } else { %>
            <div class="product-image-placeholder-large">No Image Available</div>
        <% } %>

        <div class="product-info">
            <p><strong>Description:</strong> <%= product.description %></p>
            <p><strong>Price:</strong> <%= typeof product.price === 'number' ? product.price.toFixed(2) : product.price %></p>
            <p><strong>Quantity Available:</strong> <%= product.quantity_available %></p>
            <p><strong>Category:</strong> <a href="/category/<%= encodeURIComponent(product.category) %>"><%= product.category %></a></p>
            <p><strong>Location:</strong> <%= product.producer_location %></p>
            <p><strong>Seller:</strong> <%= product.producer_name %></p>
        </div>

        <div class="contact-seller-prominent">
            <h3>Contact the Seller Directly:</h3>
            <p class="phone-number">
                <a href="tel:<%= product.producer_phone %>">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="24" height="24" style="vertical-align: middle; margin-right: 5px;">
                        <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                    </svg>
                    Call Seller: <%= product.producer_phone %>
                </a>
            </p>
            <p class="sms-link">
                <a href="sms:<%= product.producer_phone %>?body=Hi, I am interested in your product: <%= encodeURIComponent(product.name) %>">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="24" height="24" style="vertical-align: middle; margin-right: 5px;">
                        <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H6l-2 2V4h16v12zM7 9h10v2H7V9zm0 3h7v2H7v-2z"/>
                    </svg>
                    SMS Seller: <%= product.producer_phone %>
                </a>
            </p>
            <p class="communication-note">Note: All communication and transactions happen directly between you and the seller. This website does not handle payments or delivery.</p>
        </div>

    </article>
<% } else { %>
    <p>Product not found.</p>
<% } %>
<p><a href="/">Back to Homepage</a></p>

<%- include('partials/footer') %>