<%- include('partials/header', { title: title, mainFlexCenter: true }) %>

<!-- The <main> tag from header.ejs (with mainFlexCenter=true) will center this content -->
<div class="max-w-md w-full space-y-8 p-8 sm:p-10 bg-white shadow-xl rounded-2xl">
    <div>
        <h2 class="text-center text-2xl sm:text-3xl font-bold text-slate-800">
            <%= title %>
        </h2>
    </div>
    <form class="mt-8 space-y-6" action="/auth/login" method="POST">
        <div class="space-y-5">
            <div>
                <label for="phone_number" class="block text-sm font-medium text-slate-700 mb-1">Phone Number:</label>
                <input id="phone_number" name="phone_number" type="tel" autocomplete="tel" required
                       class="appearance-none block w-full px-3 py-2.5 border border-slate-300 rounded-lg shadow-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                       placeholder="e.g. 0712345678">
            </div>
            <div>
                <label for="password" class="block text-sm font-medium text-slate-700 mb-1">Password:</label>
                <input id="password" name="password" type="password" autocomplete="current-password" required
                       class="appearance-none block w-full px-3 py-2.5 border border-slate-300 rounded-lg shadow-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                       placeholder="Password">
            </div>
        </div>

        <div class="pt-3">
            <button type="submit"
                    class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                Login
            </button>
        </div>
    </form>
    <p class="mt-6 text-center text-sm text-slate-600">
        Don't have an account?
        <a href="/auth/register" class="font-medium text-indigo-600 hover:text-indigo-500">
            Register here
        </a>.
    </p>
</div>

<%- include('partials/footer') %>